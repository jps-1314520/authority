<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authority.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.authority.entity.User">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="user_password" jdbcType="VARCHAR" property="userPassword" />
        <result column="email" jdbcType="VARCHAR" property="email" />
        <result column="phone" jdbcType="VARCHAR" property="phone" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
    </resultMap>
    <sql id="Base_Column_List">
    id, user_name, user_password, email, phone, create_date, update_date
    </sql>

    <!-- 通过名字查询对应用户 -->
    <select id="queryUserByUserName" parameterType="string" resultType="com.authority.entity.User">
        select <include refid="Base_Column_List"/>
        from user
        where user_name = #{userName}
    </select>


</mapper>
